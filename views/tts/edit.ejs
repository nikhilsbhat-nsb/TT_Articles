<%- include("../partials/header") %>

<div class="container">
    <div class="col">
        <h1 style="text-align:center;">Edit <%= tt.name %></h1>
        <p>
            <div style="width:30%; margin:25px auto;">
                <form method="post" action="/tt/<%= tt._id %>?_method=PUT">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= tt.name %>" name="tt[name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= tt.image %>" name="tt[image]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= tt.description %>" name="tt[description]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/tt">Go Back</a>
            </div>
        </p>
    </div>
</div>


<%- include("../partials/footer") %>