<%- include("../partials/header") %>

<div class="container">
    <div class="col">
        <h1 style="text-align:center;">Add a New Item</h1>
        <p>
            <div style="width:30%; margin:25px auto;">
                <form method="post" action="/tt">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="name" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="image url" name="image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="description" name="description">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="Price" name="price" min="0.1" step="0.1">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/tt">Go Back</a>
            </div>
        </p>
    </div>
</div>


<%- include("../partials/footer") %>