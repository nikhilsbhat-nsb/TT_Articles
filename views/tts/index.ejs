<%- include("../partials/header") %>

<p></p>
<div class="container">
    <header class="jumbotron">
        <h1>Welcome to TT page</h1>
        <p>
            <a class="btn btn-primary btn-lg" href="/tt/new">Add new Item</a>
        </p>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Allmost Popular Items</h3>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% tt.forEach(function(tt){ %>
            <div class="col-md-6 col-sm-12">
                <div class="thumbnail">
                    <img src="<%= tt.image %>">
                    <div class="caption">
                        <h4><%= tt.name %></h4>
                    </div>
                    <p>
                        <a href="/tt/<%= tt._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div> 
</div>


<%- include("../partials/footer") %>